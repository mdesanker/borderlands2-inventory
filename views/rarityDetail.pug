extends layout

block content 
  style.
    h2,
    span {
      color: #{detail.rarity.color};
    }

  h1= title 

  h2= detail.rarity.name 

  p. 
    #{detail.rarity.description}

  h3 Weapons with 
    span #[em #{detail.rarity.name}] 
    | rarity

  ul
    each weapon in detail.weapons 
      li #{weapon.name}
    else 
      li No weapons of this rarity