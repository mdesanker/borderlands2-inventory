extends layout 

block content 
  h1= title 

  form(method="POST" action="")
    .form-group
      label(for="name") Name: 
      input#name(type="text", placeholder="Name", name="name")
    .form-group 
      label(for="description") Description:
      textarea#description(placeholder="Description", name="description", rows="5", cols="30")
    button(type="submit") Submit

  if errors 
    ul 
      for error in errors 
        li!= error.msg